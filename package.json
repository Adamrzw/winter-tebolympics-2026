{
  "name": "winter-tebolympics-2026",
  "version": "1.0.0",
  "description": "Winter Tebolympics 2026 - Full-stack fantasy Olympics tracker",
  "type": "module",
  "private": true,
  "scripts": {
    "dev:backend": "tsx watch backend/src/index.ts",
    "dev:frontend": "cd frontend && vite",
    "build:backend": "tsc --project backend/tsconfig.json",
    "build:frontend": "tsc --project frontend/tsconfig.json && cd frontend && vite build",
    "build": "npm run build:backend && npm run build:frontend",
    "start": "node backend/dist/index.js",
    "preview": "cd frontend && vite preview",
    "type-check": "tsc --project backend/tsconfig.json --noEmit && tsc --project frontend/tsconfig.json --noEmit",
    "clean": "rm -rf backend/dist frontend/dist node_modules"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "framer-motion": "^10.18.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io": "^4.6.1",
    "socket.io-client": "^4.6.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12"
  },
  "keywords": [
    "olympics",
    "fantasy",
    "real-time",
    "websocket"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
